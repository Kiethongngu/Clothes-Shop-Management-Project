<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demo.View"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Demo.View.CustomerView"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Border
        Height="600"
        Width="800"
        Background="White"
        CornerRadius="20"
        BorderThickness="5"
        >
        <Border.BorderBrush>
            <LinearGradientBrush EndPoint="0.5 ,1" StartPoint="0.5,0">
                <GradientStop Color="Aqua" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource MaterialDesignFont}"
                    FontSize="50"
                    Foreground="SkyBlue"
                    Margin="15,10,0,0"
                    ><Run Text="KHÁCH HÀNG"/>
                    </TextBlock>
                    <Image Source="/Resource/Image/account_circle.png" 
                           Height="50"
                           Margin="20,6,0,0"
                           />
                </StackPanel>

            </Grid>
            <Grid Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <Border
                        Margin="15,0,0,0"
                        Height="60"
                        Width="150"
                        CornerRadius="20"
                        Background="White"
                        BorderThickness="2"
                        >
                        <Border.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5 ,1" StartPoint="0.5,0">
                                <GradientStop Color="Aqua" Offset="0"/>
                                <GradientStop Color="LightPink" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <ComboBox
                            x:Name="cbxTimKiem"
                            Style="{StaticResource MaterialDesignFilledComboBox}"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="-8,-10,0,0"
                            materialDesign:HintAssist.Hint="Tìm Kiếm"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            BorderThickness="0"
                            materialDesign:HintAssist.FontFamily="{StaticResource MaterialDesignFont}"
                            materialDesign:HintAssist.Foreground="White"
                            Background="White"
                            FontFamily="{StaticResource MaterialDesignFont}"
                            Height="45"
                            FontSize="18" Margin="6,6,5,5">
                            
                        </ComboBox>
                    </Border>
                    <TextBox
                        x:Name="tbxSearch"
                        Width="470"
                        Height="60"
                        Margin="15,0,0,0"
                        BorderBrush="Aqua"
                        Foreground="Gray"
                        FontSize="18"
                        FontWeight="SemiBold"
                        materialDesign:HintAssist.Hint="Tìm Kiếm"
                        materialDesign:HintAssist.FontFamily="{StaticResource MaterialDesignFont}"
                        materialDesign:HintAssist.Foreground="White"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,14,0,0"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="20"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        BorderThickness="2"
                        VerticalAlignment="Center"
                        CaretBrush="White"
                        >
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Resource/Image/search_fill.png" 
                                        AlignmentX="Right" 
                                        Stretch="None"
                                        ></ImageBrush>
                        </TextBox.Background>
                    </TextBox>
                    <Button
                        Margin="20,0,0,0"
                        Width="100"
                        Height="60"
                        materialDesign:ButtonAssist.CornerRadius="15"
                        Background="White"
                        BorderBrush="LightSkyBlue"
                        BorderThickness="3"
                        >
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resource/Image/add_fill.png" 
                                   Height="40"
                                   Margin="0,3,0,0"/>

                        </StackPanel>
                    </Button>

                </StackPanel>
            </Grid>
            <Grid Grid.Row="2">
                <StackPanel>
                    <Border
                        Margin="10,5,10,0"
                        Width="770"
                        Height="50"
                        CornerRadius="15"
                        Background="White"
                        BorderThickness="2"
                        >
                        <Border.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5 ,1" StartPoint="0.5,0">
                                <GradientStop Color="Aqua" Offset="0"/>
                                <GradientStop Color="LightPink" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="MÃ KH"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="{StaticResource MaterialDesignFont}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                               Margin="10,0,0,0"
                                           />
                                    <Image Source="/Resource/Image/code_fill.png"
                                           Height="30"
                                           Margin="4,7,0,10"/>

                                </StackPanel>
                                
                                
                            </Grid>
                            <Grid Grid.Column="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="TÊN KHÁCH HÀNG"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontFamily="{StaticResource MaterialDesignFont}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           />
                                    <Image Source="/Resource/Image/person_fill.png" 
                                           Height="30"
                                           />

                                </StackPanel>
                                
                            </Grid>
                            <Grid Grid.Column="2">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="SỐ ĐIỆN THOẠI"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontFamily="{StaticResource MaterialDesignFont}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           />
                                    <Image Source="/Resource/Image/call_fill.png" Height="30"/>

                                </StackPanel>
                                
                            </Grid>
                            <Grid Grid.Column="3">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ĐỊA CHỈ"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontFamily="{StaticResource MaterialDesignFont}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           />
                                    <Image Source="/Resource/Image/home_pin.png" 
                                           Height="30"/>
                                </StackPanel>
                                
                            </Grid>

                        </Grid>

                    </Border>
                    <ListView
                        x:Name="CustomersListView"
                        ItemsSource="{Binding}"
                        Height="400"
                        Width="770"
                        SelectionMode="Single"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                        >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Width="770"
                                    Height="400"
                                    CornerRadius="15"
                                    Margin="10,0,10,0"
                                    >
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFE5D8" Offset="1"/>
                                            <GradientStop Color="#FFCAD4" Offset="0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <TextBlock
                                                Text="{Binding}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontFamily="{StaticResource MaterialDesignFont}"
                                                FontSize="16"
                                                >
                                            </TextBlock>
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <TextBlock
                                                Text="{Binding}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontFamily="{StaticResource MaterialDesignFont}"
                                                FontSize="16"
                                                Margin="5,0,0,0"
                                                >
                                            </TextBlock>
                                        </Grid>
                                        <Grid Grid.Column="2">
                                            <TextBlock
                                                Text="{Binding}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontFamily="{StaticResource MaterialDesignFont}"
                                                FontSize="16"
                                                Margin="5,0,0,0"
                                                >
                                            </TextBlock>
                                        </Grid>
                                        <Grid Grid.Column="3">
                                            <TextBlock
                                                Text="{Binding}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontFamily="{StaticResource MaterialDesignFont}"
                                                FontSize="16"
                                                Margin="5,0,0,0"
                                                >

                                            </TextBlock>
                                        </Grid>
                                    </Grid>

                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </StackPanel>
            </Grid>
        </Grid>

    </Border>
</UserControl>
