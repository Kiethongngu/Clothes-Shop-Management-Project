<Window x:Class="Demo.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:Demo.View"
        mc:Ignorable="d"
        Title="MainView" Height="550" Width="1000"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Border CornerRadius="40"
            Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="600"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="#FF6363AB"
                    CornerRadius="40,0,0,40">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock
                        Text="TIU"
                        FontSize="35"
                        FontWeight="UltraBold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="#FFF6EFEF"
                        />

                    </Grid>

                    <Grid Grid.Row="1">

                        <StackPanel>
                            <RadioButton
                            x:Name="btnHome"
                            Style="{StaticResource BtnHome}"
                            IsChecked="True"  
                            FontFamily="{StaticResource Custom}"
                            Uid="0">
                            </RadioButton>

                            <RadioButton
                            Style="{StaticResource BtnCreateBill}"
                            Uid="1"
                            FontFamily="{StaticResource Custom}"
                            x:Name="btnOrder"
                            >
                            </RadioButton>

                            <RadioButton
                            Style="{StaticResource BtnProduct}"
                            FontFamily="{StaticResource Custom}"
                            Uid="2"
                            x:Name="btnProducts"
                            >

                            </RadioButton>
                            <RadioButton
                            Style="{StaticResource BtnKH}"
                            FontFamily="{StaticResource Custom}"
                            Uid="3"
                            x:Name="btnKH"
                            >

                            </RadioButton>
                            <RadioButton
                            Style="{StaticResource BtnWarehouse}"
                            FontFamily="{StaticResource Custom}"
                            Uid="4"
                            x:Name="btnImport"
                            >

                            </RadioButton>
                            <RadioButton
                            Visibility="{Binding SetQuanLy}"
                            Style="{StaticResource BtnStatistic}"
                            FontFamily="{StaticResource Custom}"
                            Uid="5"
                            x:Name="btnReport"
                            >

                            </RadioButton>
                            <RadioButton
                            x:Name="btnQLNNV"
                            Uid="6"
                            Visibility="{Binding SetQuanLy}"
                            Style="{StaticResource BtnManage}"
                            FontFamily="{StaticResource Custom}"
                            
                            >

                            </RadioButton>
                            <RadioButton
                            Style="{StaticResource BtnSetting}"
                            FontFamily="{StaticResource Custom}"
                            Uid="7"
                            x:Name="btnSetting"
                            >

                            </RadioButton>
                        </StackPanel>
                    </Grid>
                </Grid>

            </Border>

            <Border Grid.Column="1"
                    Background="Snow"
                    CornerRadius="0,40,40,0">

            </Border>
        </Grid>


    </Border>
</Window>
