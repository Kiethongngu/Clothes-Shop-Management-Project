<Page 
        x:Class="Demo.View.ForgetPassView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Quên mật khẩu" Height="350" Width="400">

    <Grid>
        <materialDesign:Card 
        UniformCornerRadius="0" 
        Background="Transparent">
        </materialDesign:Card>
        <StackPanel
            HorizontalAlignment="Left"
            Margin="25,10,0,64">
            <Label>
                <materialDesign:PackIcon Kind="ArrowLeft"
                                         Height="26"
                                         Width="26"/>

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding Close1}"
                                                       CommandParameter="{Binding ElementName=Registerwd}"></i:InvokeCommandAction>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Label>
        </StackPanel>
        <StackPanel>
            <TextBlock
                Text ="QUÊN MẬT KHẨU"
                Foreground="#6C63FF"
                FontFamily="Josefin Sans"
                FontSize="25"
                Margin="25 45 0 0"
                FontWeight="Bold" Width="234">
            </TextBlock>
        </StackPanel>
        <StackPanel>
            <StackPanel HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            x:Name="Username"
                            Height="50"
                            Margin="35,100,0,0" Width="250">
                <materialDesign:PackIcon Kind="Email"
                                             Height="20"
                                             Width="20"
                                             VerticalAlignment="Bottom" />
                <TextBox materialDesign:HintAssist.Hint=" Nhập Email đã đăng ký"
                             Foreground="Black"
                             FontFamily="Josefin Sans"
                             FontSize="15"
                             Width="200"
                             Padding="0,15,0,0"
                             x:Name="requestUsernameField"
                             BorderBrush="LightGray"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             />
            </StackPanel>
            <TextBlock Text="Chúng tôi sẽ gửi mật khẩu mới thông qua Email liên kết với tài khoản trên"
                       TextWrapping="Wrap"
                       FontFamily="Josefin Sans"
                       FontSize="15"
                       Width="235"
                       Grid.RowSpan="2"
                       VerticalAlignment="Bottom"
                       Margin="20,30,0,50"
                       x:Name="_Instruct" />
        </StackPanel>
        <Button Width="120"
                        x:Name="sendmailbtn"
                        FontFamily="Josefin Sans"
                        Background="#6C63FF"
                        Content="Lấy mật khẩu"
                        Padding="0,0,0,0"
                        materialDesign:ButtonAssist.CornerRadius="10"
                                       
                        Margin="238,270,42,48">
        </Button>
    </Grid>
</Page>
